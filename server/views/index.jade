extends layout

block content
  div.client-graph
    div.input-filters
      div.time-frame
        span.time-frame-label Time Frame:
        select#time-frame(name='timeFrame')
          option(value="LAST_30_DAYS") Last 30 days
          option(value="LAST_7_DAYS") Last 7 days
          option(value="LAST_DAY") Last day
      div.weight-limit
        span.weight-limit-label Minimal Weight:
        input#weight-limit.input-large(name='minWeight', type='text', placeholder='30')
      div.update
        button#update-chart.btn(type='button') Go!

    div.client-graph-chart
      svg.chart

    div.client-dashboard
      div#dashboard.client-dashboard.modal.hide.fade(role='dialog', aria-hidden='true')
        div.modal-body
        div.modal-footer
          div.btn-group.graph-choice
            button.btn.btn-primary.dropdown-toggle(data-toggle='dropdown',type='button') Detail List
              span.caret
            ul.dropdown-menu
              li
                a.detail-list(href='#') Detail List
                a.tree-chart(href='#') Tree Graph
                a.center-chart(href='#') Centered Graph
          button#close-dashboard.btn(type='button') Close
